
{
  "name": "Random Trailer",
  "version": "1",
  "manifest_version": 2,

  // 简单描述
  "description": "Randomly fetches trailers from Youtube",

  // 浏览器小图表部分
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  
  // 应用协议页面
  "permissions": [
    "http://*/*",
    "https://*/*"
  ]
}